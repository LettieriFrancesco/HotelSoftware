            @Html.DisplayNameFor(model => model.DettagliPrenotazione)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @HotelSoftware.Models.DB.getClienteById(item.IdCliente).Nome
            @HotelSoftware.Models.DB.getClienteById(item.IdCliente).Cognome
        </td>
        <td>
            @HotelSoftware.Models.DB.getCameraById(item.NumeroCamera).Numero
