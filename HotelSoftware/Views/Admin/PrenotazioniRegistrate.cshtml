        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataPrenotazione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCheckIn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCheckOut)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Caparra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tariffa)
        </td>
        <td>
            @*@HotelSoftware.Models.DB.getCameraById(item.DettagliPrenotazione).Descrizione*@
            @Html.DisplayFor(modelItem => item.DettagliPrenotazione)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
